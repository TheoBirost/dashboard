{% extends 'base.html.twig' %}

{% block title %}Nouvel Argent{% endblock %}

{% block main %}
    <div class="max-w-2xl mx-auto p-6 bg-white shadow-lg rounded-lg">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center"> Ajouter une Nouvelle Transaction</h1>

        <form method="post" action="{{ path('app_argent_new') }}" class="space-y-4">
            {{ form_start(form) }}

            <div>
                <label class="block text-gray-700 font-bold mb-2">Revenus (‚Ç¨)</label>
                {{ form_widget(form.revenus, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-green-500'}}) }}
            </div>

            <div>
                <label class="block text-gray-700 font-bold mb-2">D√©penses (‚Ç¨)</label>
                {{ form_widget(form.depenses, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-red-500'}}) }}
            </div>

            <div>
                <label class="block text-gray-700 font-bold mb-2">Solde (‚Ç¨)</label>
                {{ form_widget(form.solde, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500'}}) }}
            </div>

            <div>
                <label class="block text-gray-700 font-bold mb-2">Date</label>
                {{ form_widget(form.date, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-500'}}) }}
            </div>

            <div>
                <label class="block text-gray-700 font-bold mb-2">Description</label>
                {{ form_widget(form.description, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-gray-500'}}) }}
            </div>

            <button type="submit"
                    class="w-full px-6 py-2 bg-[#06D6A0] hover:bg-[#05c093] text-white font-bold rounded-full shadow-md transition duration-300">
                üíæ Enregistrer
            </button>

            {{ form_end(form) }}
        </form>

        <div class="mt-6 text-center">
            <a href="{{ path('app_argent_index') }}"
               class="px-4 py-2 bg-[#1f1c2c] hover:bg-[#171522] text-white font-bold rounded-full shadow-md transition duration-300">
                ‚Üê Retour √† la liste
            </a>
        </div>
    </div>
{% endblock %}
