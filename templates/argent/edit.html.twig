        <form method="post" action="{{ path('app_argent_edit', {'id': argent.id}) }}" class="space-y-6">
            {{ form_start(form) }}

            <div>
                <label class="block text-gray-700 font-semibold mb-2">Revenus (‚Ç¨)</label>
                {{ form_widget(form.revenus, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500'}}) }}
