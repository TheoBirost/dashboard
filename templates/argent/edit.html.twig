            <div>
                <label class="block text-gray-700 font-semibold mb-2">Date</label>
                {{ form_widget(form.date, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-500'}}) }}
