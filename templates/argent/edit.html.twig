            <div>
                <label class="block text-gray-700 font-semibold mb-2">Solde (‚Ç¨)</label>
                {{ form_widget(form.solde, {'attr': {'class': 'w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500'}}) }}
